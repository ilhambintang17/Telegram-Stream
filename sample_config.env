# ===================================================
# Telegram-Stream Configuration File
# ===================================================
# Copy this file to config.env and fill in your values
# DO NOT share your config.env file!
# ===================================================

# Startup Config (Required)
API_ID = ""                 # Get from https://my.telegram.org/apps
API_HASH = ""               # Get from https://my.telegram.org/apps
BOT_TOKEN = ""              # Get from @BotFather
AUTH_CHANNEL = ""           # Channel ID, e.g., "-1001234567890"
DATABASE_URL = ""           # MongoDB connection string

# Session String (Optional - for cache feature)
SESSION_STRING = ""         # Generate using Pyrofork session tool

# Additional CDN Bots (Optional - for speed boost)
# MULTI_TOKEN1 = ""
# MULTI_TOKEN2 = ""
# MULTI_TOKEN3 = ""

# Web Config
BASE_URL = ""               # Your server URL, e.g., "https://yourdomain.com"
PORT = "8080"

# Login Details
USERNAME = "admin"
PASSWORD = "admin"

# Playlist Admin Login
ADMIN_USERNAME = "surfTG"
ADMIN_PASSWORD = "surfTG"

# Performance Settings
SLEEP_THRESHOLD = "60"      # Reduce FloodWait
WORKERS = "100"             # Parallel Tasks
MULTI_CLIENT = "True"       # Enable multi-client mode
HIDE_CHANNEL = ""           # Set "True" to hide channel cards

# Cache Settings
CACHE_ENABLED = "True"
CACHE_DIR = "/app/media_cache"
CACHE_MAX_SIZE_GB = "150"   # Maximum cache size in GB
